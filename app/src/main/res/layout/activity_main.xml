<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mbuenacasa.recyclerview.MainActivity">

    <LinearLayout
        android:id="@+id/fragmentlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/seatMonthRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/fragmentlayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/seat_gradient" />

    <com.example.mbuenacasa.recyclerview.HoursView.HoursView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hoursView"
        android:layout_below="@+id/seatMonthRecyclerView"
        android:layout_centerHorizontal="true">
        </com.example.mbuenacasa.recyclerview.HoursView.HoursView>

    <com.example.mbuenacasa.recyclerview.HoursView.DateSelectorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_selector_view"
        android:layout_below="@+id/hoursView"
        android:layout_centerHorizontal="true">

    </com.example.mbuenacasa.recyclerview.HoursView.DateSelectorView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_selector_view"
        android:id="@+id/textForDebug"
        android:text="Hi!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textForDebug"
        android:orientation="horizontal"
        android:id="@+id/buttonContainer"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCountdown"
            android:text="Start counting"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReverse"
            android:text="Decrementing"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

    <com.example.mbuenacasa.recyclerview.MonthRecyclerView
        android:background="@drawable/seat_gradient"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        app:center_color="@color/seatRed"
        app:side_color="@color/white"
        app:orientation="horizontal">

    </com.example.mbuenacasa.recyclerview.MonthRecyclerView>


</RelativeLayout>
