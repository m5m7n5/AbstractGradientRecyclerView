<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="100dp">
    <!--
    android:background="@drawable/multiple_gradient_effect_vertical"
    -->


    <android.support.v7.widget.RecyclerView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/hoursRecycler">

    </android.support.v7.widget.RecyclerView>

    <TextView
        style="@style/SeatFontType11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h."
        android:layout_centerVertical="true"
        android:id="@+id/customViewHours"
        android:layout_toRightOf="@+id/hoursRecycler"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/minutesRecycler"
        android:background="@color/colorPrimary"
        android:layout_toRightOf="@+id/customViewHours">

    </android.support.v7.widget.RecyclerView>
    <TextView
        style="@style/SeatFontType11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min."
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/customViewMinutes"
        />
</RelativeLayout>