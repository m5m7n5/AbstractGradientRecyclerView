<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/multiple_gradient_effect_vertical"
    android:padding="20dp">

    <android.support.v7.widget.RecyclerView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/hoursRecycler">

    </android.support.v7.widget.RecyclerView>

    <TextView
        style="@style/SeatFontType11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h."
        android:layout_centerVertical="true"
        android:id="@+id/customViewHours"
        android:layout_toRightOf="@+id/hoursRecycler"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/minutesRecycler"
        android:layout_toRightOf="@+id/customViewHours">

    </android.support.v7.widget.RecyclerView>
    <TextView
        style="@style/SeatFontType11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min."
        android:layout_centerVertical="true"
        android:id="@+id/customViewMinutes"
        android:layout_toRightOf="@+id/minutesRecycler"/>
</RelativeLayout>