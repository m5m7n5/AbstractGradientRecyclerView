<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="292dp"
    android:layout_height="130dp"
    android:padding="10dp">

    <com.example.mbuenacasa.recyclerview.SimpleStringRecyclerView
        android:id="@+id/date_picker_days_recycler"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        app:orientation="vertical"
        app:center_color="@color/msa_dark_grey"
        app:side_color="@color/msa_dark_grey_side"/>

    <LinearLayout
        android:id="@+id/date_selector_view_days_months_bar"
        android:background="@drawable/grey_vertical_gradient"
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/date_picker_days_recycler">

    </LinearLayout>

    <com.example.mbuenacasa.recyclerview.SimpleStringRecyclerView
        android:id="@+id/date_picker_months_recycler"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        app:orientation="vertical"
        app:center_color="@color/msa_dark_grey"
        app:side_color="@color/msa_dark_grey_side"
        android:layout_toRightOf="@+id/date_selector_view_days_months_bar"/>


    <LinearLayout
        android:id="@+id/date_selector_view_months_years_bar"
        android:background="@drawable/grey_vertical_gradient"
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/date_picker_months_recycler">

    </LinearLayout>

    <com.example.mbuenacasa.recyclerview.SimpleStringRecyclerView
        android:id="@+id/date_picker_years_recycler"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        app:orientation="vertical"
        app:center_color="@color/msa_dark_grey"
        app:side_color="@color/msa_dark_grey_side"
        android:layout_toRightOf="@+id/date_selector_view_months_years_bar"/>


</RelativeLayout>