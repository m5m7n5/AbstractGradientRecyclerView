<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp" android:left="0dp" android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/msa_dark_grey" />
        </shape>
    </item>

    <item android:top="0dp" android:left="0dp" android:bottom="0dp" android:right="300dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/black"
                android:endColor="@color/msa_dark_grey"
                android:centerX="50%"
                android:centerY="50%"
                android:type="linear"/>
        </shape>
    </item>

    <item android:top="0dp" android:left="300dp" android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/msa_dark_grey"
                android:endColor="@color/black"
                android:centerX="50%"
                android:centerY="50%"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>